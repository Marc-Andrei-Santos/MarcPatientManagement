@model IEnumerable<EL.MedicationEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Patient Details";
}

<h2>Patient Details</h2>

<hr />

<div id="filterWrapper">
    <div class="d-flex justify-content-start mb-3">
        <a href="@Url.Action("Create", "Medication", new { area = "Medication" })" class="action-link no-underline">
            Create New Records
        </a>
    </div>

    <hr />
    <div class="card shadow-sm rounded">
        <div class="card-body p-0">

            <!-- Table -->
            <table class="table custom-table mb-0 patient-table">
                <thead>
                    <tr class="filter-row">
                        <th class="text-center align-middle search-label">
                            <span style="margin-right: 8px;">Search by:</span>
                        </th>
                        <th>
                            <input type="date" name="modifiedDateFilter" value="@ViewBag.ModifiedDateFilter" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="text" name="dosageFilter" value="@ViewBag.DosageFilter" placeholder="Dosage" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="text" name="drugFilter" value="@ViewBag.DrugFilter" placeholder="Drug" class="form-control filter-input" />
                        </th>
                        <th class="d-flex align-items-center">
                            <input type="text" name="patientFilter" value="@ViewBag.PatientFilter" placeholder="Patient" class="form-control filter-input me-2" />
                            <a href="#" id="resetBtn" class="reset-link">Reset</a>
                        </th>
                    </tr>

                    <tr>
                        <th></th>
                        <th>Date</th>
                        <th>Dosage</th>
                        <th>Drug</th>
                        <th>Patient</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Medication", new { area = "Medication", id = item.Id })" class="action-link" title="Edit">Edit</a>
                                    <span class="mx-1">|</span>
                                    <a href="#" class="action-link delete-btn" data-id="@item.Id" title="Delete">Delete</a>
                                </td>
                                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                                <td>@(item.Dosage?.ToString("F2") ?? "0.00")</td>
                                <td>@item.Drug</td>
                                <td>@item.Patient</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">No records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div id="showingInfo" class="text-start text-muted fw-semibold small mt-2" style="font-size: 0.95rem;">
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Page/Medication/Filter.js"></script>
}

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelDeleteBtn"
                        data-bs-dismiss="modal"
                        style="background:#e3e3e3; color:#000; border:1px solid #aaa;
               padding:6px 12px; font-size:0.85rem; border-radius:5px;
               cursor:pointer; transition:0.2s;">
                    Cancel
                </button>


                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            style="background:#e3e3e3; color:#000; border:1px solid #aaa;
                                   padding:6px 12px; font-size:0.85rem; border-radius:5px;
                                   cursor:pointer; transition:0.2s;">
                        Yes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
