@model IEnumerable<EL.MedicationEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Patient Details";
}

<h2>PatientDetails</h2>

<div id="filterWrapper">
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create", "Medication", new { area = "Medication" })"
           class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Add New Record
        </a>
    </div>

    <div class="card shadow-sm rounded">
        <div class="card-body p-0">

            <table class="table custom-table mb-0">
                <thead>
      
                    <tr class="filter-row">
                        <th class="text-center align-middle">
                            <span class="fw-semibold" style="margin-right: 8px;">Search by:</span>
                        </th>
                        <th>
                            <input type="date" name="modifiedDateFilter" value="@ViewBag.ModifiedDateFilter" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="text" name="dosageFilter" value="@ViewBag.DosageFilter" placeholder="Dosage" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="text" name="drugFilter" value="@ViewBag.DrugFilter" placeholder="Drug" class="form-control filter-input" />
                        </th>
                        <th class="d-flex align-items-center">
                            <input type="text" name="patientFilter" value="@ViewBag.PatientFilter" placeholder="Patient" class="form-control filter-input me-2" />
                            <button id="resetBtn" class="btn btn-secondary">Reset</button>
                        </th>
                    </tr>

                    <tr>
                        <th></th>
                        <th>Date</th>
                        <th>Dosage</th>
                        <th>Drug</th>
                        <th>Patient</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Medication", new { area = "Medication", id = item.Id })"
                                       class="btn btn-outline-primary btn-sm me-1" title="Edit">
                                        Edit
                                    </a>
                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm delete-btn"
                                            data-id="@item.Id" title="Delete">
                                        Delete
                                    </button>
                                </td>
                                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                                <td>@(item.Dosage?.ToString("F2") ?? "0.00")</td>
                                <td>@item.Drug</td>
                                <td>@item.Patient</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">No records found.</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div id="showingInfo" class="text-start text-muted fw-semibold small mt-2" style="font-size: 0.95rem;">
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Page/Medication/Filter.js"></script>
}

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>