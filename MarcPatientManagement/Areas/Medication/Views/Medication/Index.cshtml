@model IEnumerable<EL.MedicationEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Patient Details";
}

<h2>Patient Details</h2>

<div class="d-flex justify-content-end mb-3">
    <a href="@Url.Action("Create", "Medication", new { area = "Medication" })"
       class="btn btn-success">
        <i class="fas fa-plus me-1"></i> Add New Record
    </a>
</div>

<div id="filterWrapper">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            Show
            <select id="pageSizeSelect" class="form-select d-inline-block w-auto mx-1">
                <option value="10" @(ViewBag.PageSize == 10 ? "selected" : "")>10</option>
                <option value="20" @(ViewBag.PageSize == 20 ? "selected" : "")>20</option>
                <option value="30" @(ViewBag.PageSize == 30 ? "selected" : "")>30</option>
            </select>
            entries
        </div>
    </div>

    <div class="card shadow-sm rounded">
        <div class="card-body p-0">

            <table class="table custom-table mb-0">
                <thead>
                    <tr class="filter-row">
                        <th>
                            <input type="text" name="patientFilter" value="@ViewBag.PatientFilter" placeholder="Patient" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="text" name="drugFilter" value="@ViewBag.DrugFilter" placeholder="Drug" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="text" name="dosageFilter" value="@ViewBag.DosageFilter" placeholder="Dosage" class="form-control filter-input" />
                        </th>
                        <th>
                            <input type="date" name="modifiedDateFilter" value="@ViewBag.ModifiedDateFilter" class="form-control filter-input" />
                        </th>
                        <th class="text-center">
                            <div class="d-flex justify-content-center align-items-center mb-3 buttons-wrapper">
                                <button id="filterBtn" class="btn btn-success me-2">Filter</button>
                                <button id="resetBtn" class="btn btn-secondary">Reset</button>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>Patient</th>
                        <th>Drug</th>
                        <th>Dosage</th>
                        <th>Modified Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Patient</td>
                                <td>@item.Drug</td>
                                <td>@(item.Dosage?.ToString("F2") ?? "0.00")</td>
                                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Medication", new { area = "Medication", id = item.Id })"
                                       class="btn btn-outline-primary btn-sm me-1" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm delete-btn"
                                            data-id="@item.Id" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">No records found.</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <nav aria-label="Page navigation">
            <ul id="pagination" class="pagination pagination-sm rounded shadow-sm"></ul>
        </nav>
    </div>

    <div id="showingInfo" class="text-start text-muted fw-semibold small mt-2" style="font-size: 0.95rem;">
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Page/Medication/Filter.js"></script>
}

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>
